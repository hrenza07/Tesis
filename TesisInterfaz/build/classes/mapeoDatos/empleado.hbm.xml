<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
     <class name="Encapsulacion.direccion" schema="Tesis" table="direccion">
          <id name="id" column="idEmpleado">
            <generator class="sequence">
             <param name="sequence">direccion_id_direccion_seq</param> 
            </generator>
          </id>
     <property name="nombre" column="nombre" type="string"/>
     <property name="apellido" column="apellido" type="string"/>
     <property name="dui" column="dui" type="string"/> 
     <property name="nit" column="nit" type="string"/>     
     <property name="afp" column="afp" type="string"/>     
     <property name="isss" column="isss" type="string"/>     
     <property name="numCuenta" column="cuenta" type="string"/>     
     <property name="edad" column="edad" type="int"/>     
     <property name="dui" column="dui" type="int"/>         
     <property name="salario" column="salario" type="double"/>
     <property name="Genero" column="sexo" type="char"/>
     <property name="estCivil" column="estadoCivil" type="string"/>
     
      <list name="estudios" table="direccion" fetch="select" cascade="all">
            <key>
                <column name="id" not-null="true"/>
            </key>
            <list-index>
             <column name="idx"/>
            </list-index>
            <one-to-many class="Encapsulacion.estudios"/>
        </list>
        
     <many-to-one name="emp" class="Encapsulacion.empleado">
        <column name="empleado_id" not-null="true"/>
     </many-to-one>
     
     <list name="exp" table="direccion" fetch="select" cascade="all">
            <key>
                <column name="id" not-null="true"/>
            </key>
            <list-index>
             <column name="idx"/>
            </list-index>
            <one-to-many class="Encapsulacion.estudios"/>
        </list>
     
     </class>     
</hibernate-mapping>
